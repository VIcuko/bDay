<div class="modal fade" id="add_modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header modal-header-box">
        <button class="close" data-dismiss="modal">
          <span>&times;</span>
        </button>
        <h3 class="modal-title bday-style form-text-title">
        Añadir contacto
        </h3>
      </div><!-- .modal-header -->

      <div class="modal-body">
        <%= form_for(@relationship, url: relationships_path(@relationship), html: { method: :post }) do |rel| %>

        <section class="modal-max-width">

          <div class="form-group form-group-sm margin-bottom">
          <%= rel.label :"Nombre :", class:"form-text-label" %>
              <%= rel.text_field :nickname, autofocus: true, class:"form-control form-text-input" %>        
          </div>
          <div class="form-group form-group-sm margin-bottom">
          <%= rel.label :"Email :", class:"form-text-label" %>
              <%= rel.text_field :email, autofocus: true, class:"form-control form-text-input" %>
          </div>
          <div class="form-group form-group-sm margin-bottom">
              <%= rel.label :"Cumpleaños :", class:"form-text-label" %>
               <%= rel.date_select :send_date, discard_year:true, autofocus: true %>
          </div>
        </section>      
        
      </div><!-- .modal-body -->
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary">Crear contacto</button>
        <% end %>
      </div>
    </div><!-- .modal-content -->
  </div><!-- .modal-dialog -->
</div><!-- .modal -->



